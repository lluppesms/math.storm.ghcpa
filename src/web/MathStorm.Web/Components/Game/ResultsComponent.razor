@rendermode InteractiveServer
@inject MathStorm.Core.IMathStormService MathStormService
@inject ILogger<ResultsComponent> Logger
@using MathStorm.Web.Components.Game
@using MathStorm.Core.DTOs

<UsernamePromptComponent IsVisible="@showUsernamePrompt" 
                         TotalScore="@GameSession.TotalScore"
                         OnSave="HandleSaveScore"
                         OnSkip="HandleSkipSave" />

<div class="row">
    <div class="col">
        <div class="text-center mb-4">
            <h2><i class="fas fa-trophy"></i> Game Complete!</h2>
            <h4 class="text-primary">Total Score: @GameSession.TotalScore.ToString("F1")</h4>
            <p class="text-muted">Lower scores are better! Score = Accuracy Score + Time Score</p>
        </div>

        @* GenAI Analysis Section *@
        @if (isAnalysisLoading)
        {
            <div class="card mt-4 analysis-card">
                <div class="card-header bg-info text-white">
                    <h5><i class="fas fa-robot"></i> Post-Game Analysis</h5>
                </div>
                <div class="card-body text-center">
                    <div class="spinner-border text-info" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-2">Analyzing... please wait...</p>
                </div>
            </div>
        }
        else if (!string.IsNullOrEmpty(analysisResult))
        {
            <div class="card mt-4 analysis-card">
                <div class="card-header bg-success text-white">
                    <h5><i class="fas fa-robot"></i> Post-Game Analysis from @selectedPersonalityDisplay:</h5>
                </div>
                <div class="card-body analysis-content">
                    <div class="analysis-text">
                        @((MarkupString)analysisResult.Replace("\n", "<br />"))
                    </div>
                </div>
            </div>
        }

        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-chart-line"></i> Detailed Results</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Question</th>
                                <th class="text-end">Your Answer</th>
                                <th class="text-end">Correct Answer</th>
                                <th class="text-end">Error %</th>
                                <th class="text-end">Time (s)</th>
                                <th class="text-end">Accuracy Score</th>
                                <th class="text-end">Time Score</th>
                                <th class="text-end">Total Score</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var question in GameSession.Questions)
                            {
                                <tr class="@GetRowClass(question)">
                                    <td><span class="me-2 @GetOperationColorClass(question.Operation)">@GetOperationSymbol(question.Operation)</span>@question.QuestionText</td>
                                    <td class="text-end">@(question.UserAnswer.HasValue? FormatAnswer(question.UserAnswer.Value, question.Operation) : "N/A")</td>
                                    <td class="text-end">@FormatAnswer(question.CorrectAnswer, question.Operation)</td>
                                    <td class="text-end">
                                        <span class="badge @GetErrorBadgeClass(question.PercentageDifference)">
                                            @question.PercentageDifference.ToString("F1")%
                                        </span>
                                    </td>
                                    <td class="text-end">@question.TimeInSeconds.ToString("F1")</td>
                                    <td class="text-end">@question.AccuracyScore.ToString("F1")</td>
                                    <td class="text-end">@question.TimeScore.ToString("F1")</td>
                                    <td class="text-end">@question.Score.ToString("F1")</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="table-dark">
                            <tr>
                                <td colspan="3"><strong>Totals:</strong></td>
                                <td class="text-end"><strong>@(GameSession.Questions.Any() ? GameSession.Questions.Average(q => q.PercentageDifference).ToString("F1") : "0.0")%</strong></td>
                                <td class="text-end"><strong>@(GameSession.Questions.Any() ? GameSession.Questions.Average(q => q.TimeInSeconds).ToString("F1") : "0.0")</strong></td>
                                <td class="text-end"><strong>@GameSession.Questions.Sum(q => q.AccuracyScore).ToString("F1")</strong></td>
                                <td class="text-end"><strong>@GameSession.Questions.Sum(q => q.TimeScore).ToString("F1")</strong></td>
                                <td class="text-end"><strong>@GameSession.TotalScore.ToString("F1")</strong></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>

        @if (showLeaderboard)
        {
            <LeaderboardComponent LeaderboardEntries="@leaderboardEntries"
                                  Difficulty="@GameSession.Difficulty.ToString()"
                                  CurrentUserId="@currentUserId"
                                  UserMadeLeaderboard="@userMadeLeaderboard" />
        }


        <div class="text-center mt-4">
            <button class="btn btn-primary btn-lg" @onclick="RestartGame">
                <i class="fas fa-redo"></i> Play Again
            </button>
        </div>

        <div class="card mt-4">
            <div class="card-body">
                <h6><i class="fas fa-info-circle"></i> Scoring Information</h6>
                <p class="mb-3"><strong>Lower scores are better!</strong> Your score is calculated from two components:</p>
                <ul class="list-unstyled mb-3">
                    <li class="mb-2"><i class="fas fa-bullseye text-danger"></i> <strong>Accuracy Score = Error% × 3</strong>
                        <ul class="ms-4 mt-1">
                            <li>Perfect (0% error): 0 points</li>
                            <li>Small error (10%): 30 points</li>
                            <li>Large error (capped at 200%): 600 points max</li>
                        </ul>
                    </li>
                    <li class="mb-2"><i class="fas fa-clock text-info"></i> <strong>Time Score:</strong>
                        <ul class="ms-4 mt-1">
                            <li>0-10 seconds: Time × 5/10/15 points (depends on level)</li>
                            <li>Over 10 seconds: First 10 + (extra seconds × 2.5/5/7.5)</li>
                            <li>Example: 15 seconds = 100 + (5 × 5) = 125 points</li>
                        </ul>
                    </li>
                </ul>
                <p class="mb-0"><i class="fas fa-calculator text-primary"></i> <strong>Total Score = Accuracy Score + Time Score</strong></p>
                <p class="text-muted small mb-0">Note: Accuracy is weighted 3× heavier than time to reward correctness!</p>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public GameSession GameSession { get; set; } = new();
    [Parameter] public EventCallback OnRestartGame { get; set; }

    private bool showLeaderboard = false;
    private List<LeaderboardEntry>? leaderboardEntries;
    private string? currentUserId;
    private bool userMadeLeaderboard = false;

    // Username prompt state
    private bool showUsernamePrompt = true;
    private string? savedUsername;

    // Analysis state
    private bool isAnalysisLoading = false;
    private string analysisResult = string.Empty;
    private string selectedPersonalityDisplay = string.Empty;

    private async Task HandleSaveScore(string username)
    {
        savedUsername = username;
        showUsernamePrompt = false;
        StateHasChanged();
        
        // Now submit game results with the provided username
        await SubmitGameResultsWithUsername(username);
    }

    private async Task HandleSkipSave()
    {
        showUsernamePrompt = false;
        StateHasChanged();
        
        // Still run analysis even when skipping leaderboard
        await ProcessAnalysisWithoutLeaderboard();
    }

    private async Task SubmitGameResultsWithUsername(string username)
    {
        try
        {
            var gameId = Guid.NewGuid().ToString();
            var userId = Guid.NewGuid().ToString();

            // Create request DTO
            var request = new GameResultsRequestDto
            {
                GameId = gameId,
                UserId = userId,
                Username = username,
                Difficulty = GameSession.Difficulty.ToString(),
                Questions = GameSession.Questions.Select(q => new QuestionResultDto
                {
                    Id = q.Id,
                    Number1 = q.Number1,
                    Number2 = q.Number2,
                    Operation = q.Operation.ToString(),
                    CorrectAnswer = q.CorrectAnswer,
                    UserAnswer = q.UserAnswer ?? 0,
                    TimeInSeconds = q.TimeInSeconds,
                    PercentageDifference = q.PercentageDifference,
                    Score = q.Score,
                    AccuracyScore = q.AccuracyScore,
                    TimeScore = q.TimeScore
                }).ToList(),
                Analysis = null // Analysis will be added later when it comes back from LLM
            };

            // Step 1: Submit game results to save game record (without adding to leaderboard)
            var response = await MathStormService.SubmitGameResultsAsync(request);

            if (response != null)
            {
                currentUserId = userId;
                
                // Step 2: Process analysis and then add to leaderboard
                await ProcessAnalysisAndLeaderboard(gameId, username, userId);
            }
            else
            {
                // Function service unavailable - create mock leaderboard entry
                currentUserId = userId;
                userMadeLeaderboard = true;
                leaderboardEntries = new List<LeaderboardEntry>
                {
                    new LeaderboardEntry
                    {
                        Id = Guid.NewGuid().ToString(),
                        UserId = userId,
                        Username = username,
                        GameId = gameId,
                        Difficulty = GameSession.Difficulty.ToString(),
                        Score = GameSession.TotalScore,
                        AchievedAt = DateTime.UtcNow,
                        Rank = 1
                    }
                };
                showLeaderboard = true;
                StateHasChanged();
                
                // Still process analysis
                await ProcessAnalysisInBackground(gameId, username, userId);
            }
        }
        catch (Exception ex)
        {
            // Handle error gracefully - still show results even if submission fails
            Logger.LogWarning(ex, "Failed to submit game results for user {Username}", username);
            showLeaderboard = false;
        }
    }

    private async Task ProcessAnalysisAndLeaderboard(string gameId, string username, string userId)
    {
        if (string.IsNullOrEmpty(gameId)) return;

        try
        {
            // Step 1: Perform analysis
            await PerformAnalysis(username, gameId);

            // Step 2: Update the game record with the analysis (if available)
            if (!string.IsNullOrEmpty(analysisResult))
            {
                await MathStormService.UpdateGameAnalysisAsync(gameId, analysisResult);
            }

            // Step 3: Add game to leaderboard
            var leaderboardResponse = await MathStormService.AddGameToLeaderboardAsync(gameId);
            if (leaderboardResponse != null)
            {
                userMadeLeaderboard = leaderboardResponse.AddedToLeaderboard;
            }

            // Step 4: Get updated leaderboard
            var leaderboard = await MathStormService.GetLeaderboardAsync(GameSession.Difficulty.ToString());
            if (leaderboard?.Entries != null)
            {
                leaderboardEntries = leaderboard.Entries.Select(e => new LeaderboardEntry
                {
                    Id = e.Id,
                    UserId = e.UserId,
                    Username = e.Username,
                    GameId = e.GameId,
                    Difficulty = e.Difficulty,
                    Score = e.Score,
                    AchievedAt = e.AchievedAt,
                    Rank = e.Rank
                }).ToList();
            }
            else
            {
                leaderboardEntries = new List<LeaderboardEntry>();
            }

            showLeaderboard = true;
        }
        catch (Exception ex)
        {
            // Handle gracefully - don't show error to user
            Logger.LogWarning(ex, "Failed to process game analysis for game {GameId}", gameId);
            analysisResult = $"Great job completing the game, {username}! " +
                           $"You scored {GameSession.TotalScore:F1} points. Keep practicing!";
            selectedPersonalityDisplay = "System";
            showLeaderboard = false;
        }
    }

    private async Task ProcessAnalysisInBackground(string gameId, string username, string userId)
    {
        // This method is kept for the mock/fallback scenario
        if (string.IsNullOrEmpty(gameId)) return;
        
        await PerformAnalysis(username, gameId);
    }

    private async Task ProcessAnalysisWithoutLeaderboard()
    {
        // Use descriptive identifier for debugging (not saved to database)
        var gameId = $"skip-analysis-{DateTime.UtcNow:yyyyMMddHHmmss}";
        await PerformAnalysis("Guest", gameId);
    }

    private async Task PerformAnalysis(string username, string gameId)
    {
        try
        {
            isAnalysisLoading = true;
            StateHasChanged();

            var personality = GetRandomPersonality();

            var analysisRequest = new ResultsAnalysisRequestDto
            {
                GameId = gameId,
                Username = username,
                Difficulty = GameSession.Difficulty.ToString(),
                TotalScore = GameSession.TotalScore,
                Questions = GameSession.Questions.Select(q => new QuestionResultDto
                {
                    Id = q.Id,
                    Number1 = q.Number1,
                    Number2 = q.Number2,
                    Operation = q.Operation.ToString(),
                    CorrectAnswer = q.CorrectAnswer,
                    UserAnswer = q.UserAnswer ?? 0,
                    TimeInSeconds = q.TimeInSeconds,
                    PercentageDifference = q.PercentageDifference,
                    Score = q.Score,
                    AccuracyScore = q.AccuracyScore,
                    TimeScore = q.TimeScore
                }).ToList(),
                Personality = personality,
                UserMadeLeaderboard = false
            };

            var analysisResponse = await MathStormService.AnalyzeGameResultsAsync(analysisRequest);

            if (analysisResponse != null && !string.IsNullOrEmpty(analysisResponse.Analysis))
            {
                analysisResult = analysisResponse.Analysis;
            }
            else
            {
                analysisResult = $"Great job completing the {GameSession.Difficulty} level game, {username}! " +
                               $"You scored {GameSession.TotalScore:F1} points. " +
                               $"Keep practicing to improve your math skills! " +
                               $"(Note: Analysis service is currently unavailable.)";
                selectedPersonalityDisplay = "System";
            }
        }
        catch (Exception ex)
        {
            Logger.LogWarning(ex, "Failed to process game analysis for {Username}", username);
            analysisResult = $"Great job completing the game, {username}! " +
                           $"You scored {GameSession.TotalScore:F1} points. Keep practicing!";
            selectedPersonalityDisplay = "System";
        }
        finally
        {
            isAnalysisLoading = false;
            StateHasChanged();
        }
    }

    private async Task RestartGame()
    {
        await OnRestartGame.InvokeAsync();
    }

    private string GetRowClass(MathQuestion question)
    {
        return question.PercentageDifference switch
        {
            0 => "table-success",
            <= 10 => "table-warning",
            _ => "table-danger"
        };
    }

    private string GetErrorBadgeClass(double errorPercentage)
    {
        return errorPercentage switch
        {
            0 => "bg-success",
            <= 10 => "bg-warning",
            _ => "bg-danger"
        };
    }

    private string GetOperationColorClass(MathOperation operation)
    {
        return operation switch
        {
            MathOperation.Addition => "text-primary",
            MathOperation.Subtraction => "text-warning",
            MathOperation.Multiplication => "text-success",
            MathOperation.Division => "text-info",
            _ => "text-muted"
        };
    }

    private string GetOperationSymbol(MathOperation operation)
    {
        return operation switch
        {
            MathOperation.Addition => "➕",
            MathOperation.Subtraction => "➖",
            MathOperation.Multiplication => "✖️",
            MathOperation.Division => "➗",
            _ => "❓"
        };
    }

    private string FormatAnswer(double answer, MathOperation operation)
    {
        return operation switch
        {
            MathOperation.Division => answer.ToString("F1"),
            _ => answer.ToString("F0")
        };
    }

    private string GetRandomPersonality()
    {
        var personalities = Enum.GetValues<AnalysisPersonality>();
        var random = new Random();
        var selectedPersonality = personalities[random.Next(personalities.Length)];

        // Map enum to API string values and display names
        var (apiValue, displayName) = selectedPersonality switch
        {
            AnalysisPersonality.Default => ("default", "AI Assistant"),
            AnalysisPersonality.ComedyRoast => ("comedyroast", "Comedy Roaster"),
            AnalysisPersonality.Pirate => ("pirate", "Pirate Captain"),
            AnalysisPersonality.Limerick => ("limerick", "Limerick Poet"),
            AnalysisPersonality.SportsBroadcaster => ("sportsbroadcaster", "Sports Broadcaster"),
            AnalysisPersonality.Haiku => ("haiku", "Haiku Master"),
            AnalysisPersonality.Australian => ("australian", "Aussie Mate"),
            AnalysisPersonality.YourMother => ("yourmother", "Your Mother"),
            _ => ("default", "AI Assistant")
        };

        selectedPersonalityDisplay = displayName;
        return apiValue;
    }
}